<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vol"
    android:orientation="vertical"
    android:paddingLeft="20px"
    android:paddingEnd="20px">
    <!--音量-->
    <ImageView
        android:id="@+id/vol_img"
        android:layout_marginTop="17px"
        android:layout_width="174px"
        android:layout_height="52px"
        android:src="@drawable/ic_vol_0"/>

    <!--音量调节按钮-->
    <RelativeLayout
        android:layout_marginTop="19px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vol_sub"
            android:layout_width="38px"
            android:layout_height="38px"
            android:src="@drawable/btn_vol_sub"
            android:onClick="MusicClick"/>

        <TextView
            android:id="@+id/vol_name"
            android:layout_width="97px"
            android:layout_height="38px"
            android:layout_toRightOf="@id/vol_sub"
            android:text="@string/volume"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/vol_add"
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_toRightOf="@id/vol_name"
            android:src="@drawable/btn_vol_add"
            android:onClick="MusicClick"/>

    </RelativeLayout>


</LinearLayout>